<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.UserSelectionFragment">


    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <TextView
        android:id="@+id/how_are_you_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="من أنت؟"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tool_bar"
        android:layout_marginTop="@dimen/_50sdp"
       />

    <TextView
        android:id="@+id/ownerTV"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_are_you_label"
        android:text="صاحب عمل"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/circle_gray"/>

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:srcCompat="@drawable/ic_job_seeker"
        android:padding="@dimen/_8sdp"
        android:tint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_are_you_label"
        android:background="@drawable/circle_blue"/>


    <TextView
        android:id="@+id/or_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أو"
        app:layout_constraintTop_toBottomOf="@id/ownerTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/seekerTV"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"

        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or_label"
        android:text="باحث عن عمل"

        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/circle_gray"/>

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:srcCompat="@drawable/ic_job_seeker"
        android:padding="@dimen/_8sdp"
        android:tint="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/or_label"
        android:background="@drawable/circle_blue"/>

    <LinearLayout
        android:id="@+id/have_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:gravity="center"

        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/loginTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.44"

            android:textColor="@color/colorPrimary"
            android:text="سجل دخول"

            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/have_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="@color/colorPrimary"

            android:textSize="@dimen/_14sdp"
            android:text="لديك حساب؟"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>