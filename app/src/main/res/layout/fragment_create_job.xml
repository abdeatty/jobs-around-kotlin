<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.createJob.CreateJobFragment">


    <include layout="@layout/tool_bar" android:id="@+id/tool_bar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="المسمى الوظيفى"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/jobTitleEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/hideOrganizationNameSw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="حجب اسم المنشأه"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>


                <Switch
                    android:id="@+id/hideOrganizationLogoSw"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:text="حجب شعار المنشأه"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الموقع  الوظيفه"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/mapImgView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/ic_map"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="@string/job_desc_label"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/jobDescEt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/genderRG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_male"/>

                    <RadioButton
                        android:drawableEnd="@drawable/ic_female"
                        android:layout_width="wrap_content"
                        android:drawableTint="@color/pink"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:drawableEnd="@drawable/ic_male"
                        android:layout_width="wrap_content"
                        android:drawableTint="@color/blue"
                        android:layout_height="wrap_content"/>
                </RadioGroup>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="المؤهل العملى"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layoutDirection="rtl"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <AutoCompleteTextView
                    android:id="@+id/qualificationTV"
                    android:layout_width="match_parent"
                    android:editable="false"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text=" عدد سنوات الخبره"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layoutDirection="rtl"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <AutoCompleteTextView
                    android:id="@+id/yearsOfExperienceTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text=" اللغه الانجليزيه مطلوبه للوظيفه؟"
              />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/rect_white_with_gray_border"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/englishLevelGoodTV"
                        android:layout_width="0dp"
                        android:text="جيد"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/englishLevelIntermediateTV"
                        android:layout_width="0dp"
                        android:text="متوسط"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:background="@drawable/rect_light_blue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/englishLevelBeginnerTV"
                        android:layout_width="0dp"
                        android:text="مبتدئ"

                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/englishRG"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نعم"/>


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لا"/>
                </RadioGroup>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="الجنسيه المطلوبه"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layoutDirection="rtl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سعودى"/>


                    <RadioButton
                        android:layoutDirection="rtl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الكل"/>
                </RadioGroup>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="نوع الدوام"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_white_with_gray_border"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fullTimeJobTV"
                    android:layout_width="wrap_content"
                    android:text="كامل"

                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/partTimeJobTV"
                    android:layout_width="wrap_content"
                    android:text="جزئي"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:background="@drawable/rect_light_blue"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createJobButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                app:cornerRadius="@dimen/_20sdp"

                android:paddingStart="@dimen/_40sdp"
                android:paddingEnd="@dimen/_40sdp"
                android:text="نشر"

                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>