<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rect_white_with_gray_border"
    android:backgroundTint="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/employee_iv"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"


                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:src="@drawable/ic_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/employee_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:text="محمد راشد"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/employee_iv" />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_10sdp"
                app:srcCompat="@drawable/ic_star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/employee_education_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableTint="@color/colorPrimary"
                android:text="بكالوريوس هندسه"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toStartOf="@id/employee_iv"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/employee_specialist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="بكالوريوس هندسه"
                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@id/employee_iv"
                app:layout_constraintTop_toBottomOf="@id/employee_education_tv" />


            <TextView
                android:id="@+id/employee_nationality_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_pin"
                android:drawableTint="@color/colorPrimary"
                android:scaleY=".7"
                android:text="سعودى"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@id/employee_iv"
                app:layout_constraintTop_toBottomOf="@id/employee_specialist_tv" />

            <TextView
                android:id="@+id/employee_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:drawableEnd="@drawable/ic_clock"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableTint="@color/colorPrimary"
                android:text="10 كم"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/employee_iv"
                app:layout_constraintTop_toBottomOf="@id/employee_nationality_tv" />

            <TextView
                android:id="@+id/employee_experience_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="الخبرات السابقه"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/employee_iv"
                app:layout_constraintTop_toBottomOf="@id/employee_distance_tv" />


            <TextView
                android:id="@+id/employee_experience_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="start"

                android:text="مسئول فريق تفتيش الحرائق درجه البكالوريوس فى تخصصات الحمايه مسئول فريق تفتيش الحرائق درجه البكالوريوس فى تخصصات الحمايه مسئول فريق تفتيش الحرائق درجه البكالوريوس فى تخصصات الحمايه"

                android:textColor="@color/blue"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="@dimen/_110sdp"
                app:layout_constraintTop_toBottomOf="@id/employee_experience_label" />

            <TextView
                android:id="@+id/last_appearance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="اخر ظهور   10/3/2018"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/employee_distance_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/employee_nationality_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

       </androidx.constraintlayout.widget.ConstraintLayout>
