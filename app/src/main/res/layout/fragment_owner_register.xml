<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.register.owner.OwnerRegisterFragment">




    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="اسم المنشأه"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/organizationNameTIET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="ارفاق شعار المنشأه"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/organizationImageTI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:editable="false"
                    android:drawableStart="@drawable/ic_upload"
                    android:padding="@dimen/_4sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="نشلط المنشأه"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/organizationActivityTI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:drawablePadding="@dimen/_8sdp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تحديدموقع المنشأه على الخريطه"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_8sdp"
                android:layout_gravity="end|center"
                android:gravity="center"
                android:drawableTint="@color/blue"

                android:drawableEnd="@drawable/ic_pin"
                android:layout_margin="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="يمكن تحريك الموشرالى موقع قريب فى نفس الحى كحديقه عامه او طريق رئيسئ"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray"
                android:layout_marginStart="@dimen/_10sdp"

                android:layout_marginEnd="@dimen/_10sdp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/ic_map"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"

                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_18sdp"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="البيانات التاليه مخصصه لاداره التطبيق ولن تظهر لاطراف اخرى"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="رقم السجل التجارى"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layoutDirection="rtl"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:passwordToggleEnabled="true"


                app:passwordToggleTint="@color/blue"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessCommercialNumberTIET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="ارفاق صوره السجل التجارى"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessCommercialImageTIET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_upload"
                    android:padding="@dimen/_4sdp"
                    android:editable="false"
                    android:drawablePadding="@dimen/_8sdp"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="اسم الشخص المخول"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/authorizedPersonNameTIET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text=" رقم الهاتف"/>


                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:gravity="center"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="@dimen/_45sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneTIET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="@dimen/_8sdp"
                            android:drawableStart="@drawable/ic_drop_down_arrow"
                            android:backgroundTint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="رقم الجوال"/>


                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:gravity="center"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxStrokeWidth="@dimen/_4sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_height="@dimen/_45sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneNumberTIET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="@dimen/_8sdp"
                            android:drawableStart="@drawable/ic_drop_down_arrow"
                            android:backgroundTint="@color/white"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="البريد الالكترونى"/>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailTIET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"
                app:cornerRadius="@dimen/_20sdp"


                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:text="حفظ وارسال رمز التحقق"

                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_40sdp"/>


            <LinearLayout
                android:id="@+id/layout2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"

                android:visibility="gone"
                app:layout_goneMarginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="تحديث"
                    android:drawableTop="@drawable/ic_drop_down_arrow"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"

                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="حفظ"
                    android:drawableTop="@drawable/ic_drop_down_arrow"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"

                    android:layout_height="wrap_content"/>



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="تعطيل"
                    android:drawableTop="@drawable/ic_drop_down_arrow"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"

                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>