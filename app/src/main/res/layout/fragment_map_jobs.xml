<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mapJobs.MapJobsFragment">

    <include layout="@layout/tool_bar" android:id="@+id/appBar"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"

        android:layout_gravity="top|end"
        android:background="@drawable/rect_white_with_gray_border"
        android:layout_marginStart="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/experienceFilterTV"
            android:layout_width="0dp"
            android:text="الخبره"

            android:padding="@dimen/_7sdp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/qualificationsFilterTV"
            android:layout_width="0dp"
            android:text="المؤهل"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:background="@drawable/rect_light_blue"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/jobFilterTV"
            android:layout_width="0dp"
            android:text="الوظيفه"

            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.google.android.gms.maps.MapView
        android:id="@+id/mMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>