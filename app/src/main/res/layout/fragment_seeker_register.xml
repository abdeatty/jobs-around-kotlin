                    android:layout_height="match_parent"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:drawablePadding="@dimen/_8sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text=" التخصص الوظيفى"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_8sdp"

                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text=" عدد سنوات الخبره"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_45sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableStart="@drawable/ic_drop_down_arrow"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="وصف مختصر عن الخبرات السابقه ان وجدت"/>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:gravity="center"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:backgroundTint="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="مستوى اللغه الانجليزيه"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/rect_white_with_gray_border"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/english_level_good_tv"
                        android:layout_width="0dp"
                        android:text="جيد"

                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/english_level_intermediate_tv"
                        android:layout_width="0dp"
                        android:text="متوسط"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:background="@drawable/rect_light_blue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/english_level_beginner_tv"
                        android:layout_width="0dp"
                        android:text="مبتدئ"

                        android:gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نعم"/>


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لا"/>
                </RadioGroup>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الجنسيه"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سعودى"
                android:drawableStart="@drawable/ic_drop_down_arrow"
                android:drawablePadding="@dimen/_100sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_5sdp"
