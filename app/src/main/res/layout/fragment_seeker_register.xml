                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="نوع الدوام"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/rect_white_with_gray_border"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/both_partial_and_part_job_type_tv"
                    android:layout_width="0dp"
                    android:text="الكل"

                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/partial_job_type_tv"
                    android:layout_width="0dp"
                    android:text="جزئي"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:background="@drawable/rect_light_blue"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/full_time_job_type_tv"
                    android:layout_width="0dp"
                    android:text="كامل"

                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الموقع على الخريطه"
